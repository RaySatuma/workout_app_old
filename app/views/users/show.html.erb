<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%=gravatar_url(@user, { size: 400 }) %>" alt="" >
      </div>
    </div>
  </aside>
  <ul>
  <% @posts.each do |post| %>
  <li><%= post.content %></li>
  <% end %>
</ul>
</div>
<%= render 'posts/post' %>



